<?xml version="1.0" encoding="utf-8"?>
<com.anymore.wanandroid.mvp.view.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/wa_activity_horizontal_padding"
        android:paddingTop="@dimen/wa_activity_vertical_padding"
        android:paddingRight="@dimen/wa_activity_horizontal_padding"
        android:paddingBottom="@dimen/wa_activity_vertical_padding">

        <TextView
            android:id="@+id/tvTodoName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="@dimen/wa_activity_horizontal_padding"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTodoDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            tools:text="2020-02-23" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvComplete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="删除"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</com.anymore.wanandroid.mvp.view.widget.SwipeMenuLayout>