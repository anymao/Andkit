<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wa_tv_fle_remain_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/wa_tv_fle_label"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:text="500字" />

    <TextView
        android:id="@+id/wa_tv_fle_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/wa_tv_fle_remain_words"
        android:layout_toLeftOf="@id/wa_tv_fle_remain_words"
        tools:text="说明" />

    <EditText
        android:id="@+id/wa_et_fle_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wa_tv_fle_label"
        android:layout_alignStart="@id/wa_tv_fle_label"
        android:layout_alignLeft="@id/wa_tv_fle_label"
        android:layout_alignEnd="@id/wa_tv_fle_remain_words"
        android:layout_alignRight="@id/wa_tv_fle_remain_words"
        android:background="@null"
        android:paddingTop="8dp"
        tools:text="哈啊地方" />

</merge>